<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/d2"
            android:scaleType="fitXY"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/heart_active"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>

   <TextView
       android:id="@+id/textview_PathologyName"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Dhanwantry Pathology"
       android:textColor="#000000"
       />
    <TextView
        android:id="@+id/textview_PathologyAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="202 Anshul Apartments, 105 Geeta Nagar, Indore"
        />
    <TextView
        android:id="@+id/textview_PathologyPinCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="452001"
        android:layout_marginBottom="15dp"
        />

</LinearLayout>